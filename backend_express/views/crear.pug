  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css')

  body
    .modal-dialog
        .modal-content
          // Modal Header
          .modal-header
            button.close(type="button", data-dismiss="modal")
              span(aria-hidden="true") Ã—
              span.sr-only Close
            h4#myModalLabel.modal-title
              | Add your pet
          // Modal Body
          .modal-body
            form(role='form' method='POST' action='http://localhost:3000/crear/')
              div.form-group
                label(for='pet_name') Pet name:
                input#name.form-control(type='text', name='pet_name')
              div.form-group
                label(for='pet_age') Pet age:
                input#age.form-control(type='text', name='pet_age')
                     
              div.form-group
                label(for='type') Pet type:
                select(name='pet_type')
                  option(value='dog') Dog
                  option(value='cat') Cat
              
              div.form-group
                label(for='description') Pet description:
                input(type='text', name='description')

                
              
              div.form-group
                label(for='breed') Pet breed:
                input(type='text', name='breed')

              div.form-group
                label(for='toy') Favorite toy:
                select(name='toy')
                  option(value='pelota') pelota
                  option(value='lazo') lazo
                  option(value='raton') raton
                  option(value='hueso') hueso
                  option(value='mascara') mascara
                  option(value='peluche') peluche
                  option(value='peluza') peluza
                  option(value='goma') goma 
              div.form-group
                label(for='color') Toy color:
                select(name='color')
                  option(value='red') red
                  option(value='yellow') yellow
                  option(value='green') green
                  option(value='white') white
                  option(value='black') black
              button.btn.btn-primary(type="submit", name="asdf") Create
          // Modal Footer
          .modal-footer
            
